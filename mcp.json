{
  "$schema": "https://modelcontextprotocol.io/schema.json",
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-context7"],
      "description": "최신 라이브러리 문서 및 코드 예제 검색"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "--allow", "."],
      "description": "로컬 파일시스템 읽기/쓰기 및 grep 검색"
    },
    "grep-app": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-grep-app"],
      "description": "GitHub 공개 저장소 코드 검색"
    }
  },
  "recommendedServers": [
    {
      "name": "context7",
      "purpose": "최신 라이브러리 문서 검색",
      "url": "https://github.com/modelcontextprotocol/servers/tree/main/src/context7"
    },
    {
      "name": "filesystem",
      "purpose": "로컬 파일 작업 및 grep 검색",
      "url": "https://github.com/modelcontextprotocol/servers/tree/main/src/filesystem"
    },
    {
      "name": "grep-app",
      "purpose": "GitHub 공개 저장소 검색",
      "url": "https://github.com/modelcontextprotocol/servers/tree/main/src/grep-app"
    }
  ]
}
